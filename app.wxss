/*右箭头*/
.navigator-arrow {
  padding-right: 10rpx;
  position: relative;
  padding-left: 10rpx;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 10rpx;
}

.navigator-arrow.down:after {
  transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
}
.navigator-arrow.down.up:after {
  transform: matrix(0.71, -0.71, 0.71, 0.71, 0, 0);
}

